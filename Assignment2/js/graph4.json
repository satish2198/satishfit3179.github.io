{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": 450,
  "height": 300,
  "title": "Monthly Death Confirmed per Region (as of August 2020)-testv3",
  "data": {
    "url": "https://raw.githubusercontent.com/satish2198/satishkumarFIT3179/master/wk10hw/data/graph5v2-_2_.csv"
  },
  "encoding": {
    "x": {
      "field": "Date",
      "type": "ordinal",
      "title": "Month of the Year",
      "axis": {"labelAngle": 0}
    },
    "y": {
      "field": "Sum_of_Deaths",
      "type": "quantitative",
      "axis": {"tickCount": 6},
      "scale": {"type": "sqrt"},
      "title":"Total No of Deaths"
    }
  },
  "layer": [
    {
      "selection": {
        "continent_highlight": {
          "type": "multi",
          "fields": ["WHO_Region"],
          "bind": "legend"
        }
      },
      "mark": {"type": "line", "point": true},
      "encoding": {
        "color": {"field": "WHO_Region", "type": "nominal"},
        "opacity": {
          "condition": {"selection": "continent_highlight", "value": 1.5},
          "value": 0.2
        },
        "tooltip": [
          {"field": "WHO_Region", "type": "nominal"},
          {"field": "Sum_of_Confirmed", "type": "quantitative"},
          {"field": "Sum_of_Deaths", "type": "quantitative"}
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "right",
        "baseline": "middle",
        "dx": 0,
        "fontSize": 8.5,
        "fontStyle": "bold"
      },
      "encoding": {
        "text": {"field": "Sum_of_Confirmed", "type": "quantitative"},
        "color": {"value": "black"},
        "opacity": {
          "condition": {
            "test": "datum['WHO_Region'] == 'Europe' || datum['WHO_Region'] == 'Americas'",
            "value": 1
          },
          "value": 0
        },
        "tooltip": [
          {"field": "WHO_Region", "type": "nominal"},
          {"field": "Sum_of_Confirmed", "type": "quantitative"},
          {"field": "Sum_of_Deaths", "type": "quantitative"}
        ]
      }
    }
  ],
  "config": {}
}
